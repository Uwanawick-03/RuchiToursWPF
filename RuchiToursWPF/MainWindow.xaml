<Window x:Class="RuchiToursWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuchiToursWPF"
        mc:Ignorable="d"
        Title="Login" Height="800" Width="1250" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="Login">
        <Image Source="/ali-maah-zyOeEm4NsPM-unsplash.jpg" Stretch="Fill" Width="1250" Height="805" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Rectangle x:Name="PanelLogin" HorizontalAlignment="Center" Height="500" Width="360" ClipToBounds="True" Stroke="White" StrokeThickness="2" Margin="0,150,0,140" RadiusX="20" RadiusY="20">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF3AA9AD" Opacity="0.6"/>
            </Rectangle.Fill>
            <Rectangle.Effect>
                <BlurEffect/>

            </Rectangle.Effect>
        </Rectangle>
        <Button x:Name="BtnClose" Content="X" HorizontalAlignment="Left" Margin="1210,10,0,0" VerticalAlignment="Top" Width="30" Height="30" Click="Button_Click" FontWeight="Bold" FontSize="18" BorderThickness="0,0,0,0" ClipToBounds="True">
            <Button.Background>
                <SolidColorBrush Color="#FFC30000" Opacity="0"/>
            </Button.Background>
        </Button>
        <Label Content="Login Your Account" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Height="45" Width="300" FontSize="30" FontFamily="Microsoft Tai Le" FontWeight="Bold"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="475,277,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="20" Width="104" Height="32">
            <Label.Background>
                <SolidColorBrush Color="#FFFDFDFD" Opacity="0"/>
            </Label.Background>
        </Label>



        <TextBox x:Name="TxtUserName" HorizontalAlignment="Center" Margin="0,319,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="30" FontFamily="Microsoft Tai Le" FontSize="20" TextChanged="TxtUserName_TextChanged"/>


        <TextBox x:Name="TxtUserName" HorizontalAlignment="Center" Margin="0,319,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="30" FontFamily="Microsoft Tai Le" FontSize="20"/>

        <Label Content="Password" HorizontalAlignment="Left" Margin="475,379,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="20" Width="92" Height="32">
            <Label.Background>
                <SolidColorBrush Color="#FFFDFDFD" Opacity="0"/>
            </Label.Background>
        </Label>

        <TextBox x:Name="TxtPassword" HorizontalAlignment="Center" Margin="0,421,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="32" FontFamily="Microsoft Tai Le" FontSize="20" TextChanged="TxtPassword_TextChanged"/>


         

        <TextBox x:Name="TxtPassword" HorizontalAlignment="Center" Margin="0,421,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="32" FontFamily="Microsoft Tai Le" FontSize="20"/>


        <Button x:Name="BtnRegister" Content="Register" HorizontalAlignment="Center" Margin="0,555,0,0" VerticalAlignment="Top" Width="300" Height="32" FontFamily="Microsoft Tai Le" FontSize="16" BorderThickness="7,0,0,0" Click="BtnRegister_Click">
            <Button.Style>
                <Style/>
            </Button.Style>
        </Button>
        <Button x:Name="BtnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,503,0,0" VerticalAlignment="Top" Width="300" Height="32" FontFamily="Microsoft Tai Le" FontSize="16" Background="#FF74C2C2" BorderThickness="7,0,0,0" BorderBrush="#FF2D7B7B" ClipToBounds="True" Click="BtnLogin_Click">
            <Button.Style>
                <Style/>
            </Button.Style>
        </Button>

        <ContentControl x:Name="HomeContentControl"/>

        

    </Grid>
</Window>
