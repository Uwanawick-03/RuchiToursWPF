<Window x:Class="RuchiToursWPF.EditGuestDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RuchiToursWPF"
        mc:Ignorable="d" Height="798" Width="950" Title="Edit Guest Details">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0.5"/>
    </Window.Background>
    <Grid Width="950" Height="800">
        <Rectangle HorizontalAlignment="Center" Height="600" Stroke="White" VerticalAlignment="Center" Width="600" RadiusX="30" RadiusY="30" StrokeThickness="2" UseLayoutRounding="True">
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF3AA9AD" Opacity="0.5"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="EditGuestDetails1" Content="Edit Guest Details" HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Microsoft Tai Le" FontWeight="Bold" Width="400" Height="40" HorizontalContentAlignment="Center"/>
        <Label Content="Full Name" HorizontalAlignment="Left" Margin="230,262,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="18" Width="90" Height="32"/>
        <Label Content="Contact No" HorizontalAlignment="Left" Margin="230,326,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="18" Width="100" Height="32"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="230,0,0,0" VerticalAlignment="Center" FontFamily="Microsoft Tai Le" FontSize="18" Width="60" Height="32"/>
        <Label Content="Country" HorizontalAlignment="Left" Margin="230,454,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="18" Width="73" Height="32"/>
        <Label Content="Passport No" HorizontalAlignment="Left" Margin="230,518,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="18" Width="106" Height="32"/>
        <TextBox x:Name="TxtFullName" HorizontalAlignment="Left" Margin="396,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" Height="32" FontSize="18"/>
        <TextBox x:Name="TxtContactNo" HorizontalAlignment="Left" Margin="396,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" Height="32" FontSize="18"/>
        <TextBox x:Name="TxtEmail" HorizontalAlignment="Left" Margin="396,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="279" Height="32" FontSize="18"/>
        <TextBox x:Name="TxtCountry" HorizontalAlignment="Left" Margin="396,454,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" Height="32" FontSize="18"/>
        <TextBox x:Name="TxtPassportNo" HorizontalAlignment="Left" Margin="396,518,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" Height="32" FontSize="18"/>
        <Button x:Name="BtnSave" Content="Save" HorizontalAlignment="Left" Margin="600,616,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="16" Width="75" Height="26" Background="#FF518787" BorderBrush="Black" Click="BtnSave_Click"/>
    </Grid>
</Window>

