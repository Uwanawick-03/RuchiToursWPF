<UserControl x:Class="RuchiToursWPF.GuestDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RuchiToursWPF"
             mc:Ignorable="d" Width="950" Height="796">
    <Grid Width="950" Height="794">
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="1"/>
        </Grid.Background>
        <Label x:Name="Guest_Details" Content="Guest Details" HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Microsoft Tai Le" FontWeight="Bold" Width="174" Height="40" HorizontalContentAlignment="Center"/>
        <Label x:Name="Search" Content="Search" HorizontalAlignment="Left" Margin="592,94,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="16" Height="25" Width="58"/>
        <TextBox x:Name="TxtSearchBoxGD" HorizontalAlignment="Left" Margin="685,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="25"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Width="820" Height="150" Margin="65,134,65,510" FontFamily="Microsoft Tai Le" FontSize="11" HeadersVisibility="Column" ColumnHeaderHeight="20" AutoGenerateColumns="False" RowHeight="20">
            <DataGrid.Columns>
                <DataGridTextColumn FontFamily="Microsoft Tai Le" FontSize="10" Header="ID" Width="20"/>
                <DataGridTextColumn FontFamily="Microsoft Tai Le" FontSize="10" Header="Name" Width="130"/>
                <DataGridTextColumn FontFamily="Microsoft Tai Le" FontSize="10" Header="Contact No" Width="130"/>
                <DataGridTextColumn FontFamily="Microsoft Tai Le" FontSize="10" Header="E-mail" Width="130"/>
                <DataGridTextColumn FontFamily="Microsoft Tai Le" FontSize="10" Header="Country" Width="130"/>
                <DataGridTextColumn FontFamily="Microsoft Tai Le" FontSize="8" Header="Passport No" Width="130"/>
                <DataGridTextColumn FontFamily="Microsoft Tai Le" FontSize="10" Header="Edit" Width="75"/>
                <DataGridTextColumn FontFamily="Microsoft Tai Le" FontSize="10" Header="Delete" Width="75"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="BtnAdd" HorizontalAlignment="Left" Margin="807,712,0,0" VerticalAlignment="Top" Width="78" Height="23" HorizontalContentAlignment="Center" AllowDrop="True" Padding="1,1,1,0" Content="Add" FontFamily="Microsoft Tai Le" FontSize="16" FontWeight="Bold" Background="#FF518787" BorderBrush="Black"/>

    </Grid>
</UserControl>
