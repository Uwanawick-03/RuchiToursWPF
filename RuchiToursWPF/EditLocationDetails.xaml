<UserControl x:Class="RuchiToursWPF.EditLocationDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RuchiToursWPF"
             mc:Ignorable="d" Height="800" Width="950">
    <Grid Width="950" Height="800">
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="0.5"/>
        </Grid.Background>
        <Rectangle HorizontalAlignment="Center" Height="600" Stroke="White" VerticalAlignment="Center" Width="600" RadiusX="30" RadiusY="30" StrokeThickness="2">
            <Rectangle.Effect>
                <BlurEffect/>
            </Rectangle.Effect>
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF3AA9AD" Opacity="0.5"/>
            </Rectangle.Fill>
        </Rectangle>

        <Label x:Name="Edit_Location_Details" Content="Edit Location Details" HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Microsoft Tai Le" FontWeight="Bold" Width="400" Height="40" HorizontalContentAlignment="Center"/>
        <Label Content="Location Name" HorizontalAlignment="Left" Margin="230,433,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="18" Width="130" Height="32"/>
        <Label Content="City" HorizontalAlignment="Left" Margin="230,480,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="18" Width="100" Height="32"/>
        <Label Content="Province" HorizontalAlignment="Left" Margin="230,527,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="18" Width="100" Height="32"/>
        <Label Content="District" HorizontalAlignment="Left" Margin="230,574,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="18" Width="73" Height="32"/>
        <TextBox x:Name="TxtLocationName" HorizontalAlignment="Left" Margin="396,433,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" Height="32" FontSize="18"/>
        <TextBox x:Name="TxtCity" HorizontalAlignment="Left" Margin="396,480,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" Height="32" FontSize="18"/>
        <TextBox x:Name="TxtProvince" HorizontalAlignment="Left" Margin="396,527,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" Height="32" FontSize="18"/>
        <TextBox x:Name="TxtDistrict" HorizontalAlignment="Left" Margin="396,574,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="279" Height="32" FontSize="18"/>
        <Button x:Name="BtnSave" Content="Save" HorizontalAlignment="Left" Margin="600,616,0,0" VerticalAlignment="Top" FontFamily="Microsoft Tai Le" FontSize="16" Width="75" Height="26" Background="#FF518787" BorderBrush="Black"/>
        <Label Content="" HorizontalAlignment="Center" Height="150" Margin="0,183,0,0" VerticalAlignment="Top" Width="150" Background="White"/>
        <Button x:Name="BtnAddPhoto" Content="Add Photo" HorizontalAlignment="Center" Margin="0,353,0,0" VerticalAlignment="Top" Width="150" Height="30" FontFamily="Microsoft Tai Le" FontSize="18" Background="#FF518787" BorderBrush="Black"/>

    </Grid>
</UserControl>
